{
  "compilerOptions": {
    "baseUrl": "./",
    // "paths": {
    //   "@/*": ["src/*"]
    // },
    "rootDir": "src",
    "strict": true,
    // @Entityのため
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,
    // "sourceMap": true,
    //  NOTE: `npx typeorm init --name MyProject --database sqlite` で生成されるtsconfig
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    // "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
